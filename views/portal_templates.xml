<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="preview_form_template" name="App Preview Form">
        <t t-call="website.layout">
            <div class="container my-5">
                <h2>Preview My Odoo App</h2>
                <form action="/app/preview/create_user" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" name="email" class="form-control" required="True"/>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Start Preview</button>
                </form>
            </div>
        </t>
    </template>
</odoo>